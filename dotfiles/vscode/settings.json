{
  "settingsSync.ignoredExtensions": ["ms-vscode-remote.remote-wsl"],

  "update.showReleaseNotes": false,
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,

  "window.zoomLevel": 0.7,
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "debug.console.fontSize": 13,
  "editor.fontFamily": "FiraCode Nerd Font Retina",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Retina",
  "debug.console.fontFamily": "FiraCode Nerd Font Retina",
  "workbench.iconTheme": "material-icon-theme",
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Atom One Light",
  "workbench.preferredDarkColorTheme": "Atom One Dark",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "[Atom One Light]": {
      "activityBar.background": "#EAEAEB",
      "sideBarSectionHeader.background": "#EAEAEB"
    },
    "[Atom One Dark]": {
      "activityBar.background": "#21252B",
      "sideBarSectionHeader.background": "#21252B"
    }
  },

  "security.workspace.trust.enabled": false,
  "remote.autoForwardPortsSource": "hybrid",
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "window.newWindowDimensions": "inherit",
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.tree.enableStickyScroll": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,

  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.stickyScroll.enabled": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.autoClosingOvertype": "always",
  "editor.cursorSurroundingLines": 12,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": false,
  "errorLens.delay": 750,

  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "json.format.enable": false,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[yaml]": { "editor.defaultFormatter": "redhat.vscode-yaml" },

  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.terminal.focusFind",
    "-workbench.action.quickOpen"
  ],
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.env.linux": { "ZSH_TMUX_AUTOSTART": "false" },
  "terminal.integrated.env.osx": { "ZSH_TMUX_AUTOSTART": "false" },
  "terminal.integrated.env.windows": { "ZSH_TMUX_AUTOSTART": "false" },

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "scm.defaultViewMode": "tree",
  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "notebook.diff.ignoreMetadata": true,
  "notebook.diff.ignoreOutputs": true,

  "vim.handleKeys": {
    "<C-b>": false,
    "<C-j>": false,
    "<C-n>": false,
    "<C-p>": false,
    "<C-s>": false,
    "<C-w>": false,
    "<C-z>": false
  },
  "vim.vimrc.enable": true,
  "vim.leader": " ",
  "vim.highlightedyank.enable": true,

  "python.terminal.activateEnvironment": false,
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "notebook.output.scrolling": true
}
