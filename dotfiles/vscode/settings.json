{
  // [[ General ]]

  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "security.workspace.trust.enabled": false,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "window.newWindowDimensions": "inherit",
  "window.title": " ",
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "workbench.activityBar.location": "top",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "update.showReleaseNotes": false,
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,

  // [[ Apperance ]]

  "window.zoomLevel": 0.2,
  "editor.fontFamily": "JetBrainsMonoNL Nerd Font",
  "terminal.integrated.fontFamily": "JetBrainsMonoNL Nerd Font",
  "debug.console.fontFamily": "JetBrainsMonoNL Nerd Font",
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "debug.console.fontSize": 13,
  "editor.scrollbar.horizontalScrollbarSize": 7,
  "editor.scrollbar.verticalScrollbarSize": 7,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "[Atom One Dark]": {
      "activityBar.background": "#21252B",
      "sideBarSectionHeader.background": "#21252B"
    }
  },

  // [[ Editing ]]

  "editor.acceptSuggestionOnEnter": "off",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorSurroundingLines": 12,
  "editor.lightbulb.enabled": "off",
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.showFoldingControls": "never",
  "editor.stickyScroll.enabled": false,

  // [[ Formatting ]]

  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },

  // [[ Terminal ]]

  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.terminal.focusFind",
    "-workbench.action.quickOpen"
  ],
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.env.linux": { "ZSH_TMUX_AUTOSTART": "false" },
  "terminal.integrated.env.osx": { "ZSH_TMUX_AUTOSTART": "false" },
  "terminal.integrated.env.windows": { "ZSH_TMUX_AUTOSTART": "false" },
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": false,

  // [[ Git ]]

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "notebook.diff.ignoreMetadata": true,
  "notebook.diff.ignoreOutputs": true,
  "scm.defaultViewMode": "tree",

  // [[ Vim ]]

  "vim.handleKeys": {
    "<C-b>": false,
    "<C-e>": false,
    "<C-f>": false,
    "<C-h>": false,
    "<C-j>": false,
    "<C-n>": false,
    "<C-p>": false,
    "<C-\\>": false
  },
  "vim.highlightedyank.enable": true,
  "vim.leader": " ",
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,

  // [[ Extensions ]]

  "settingsSync.ignoredExtensions": ["ms-vscode-remote.remote-wsl"],
  "extensions.ignoreRecommendations": true,
  "extensions.allowed": {
    "ms-python.vscode-pylance": false,
    "ms-python.vscode-python-envs": false,
    "ms-toolsai.vscode-jupyter-cell-tags": false,
    "ms-toolsai.vscode-jupyter-slideshow": false,
    "*": true
  },

  "github.copilot.nextEditSuggestions.enabled": true,

  "direnv.restart.automatic": true,
  "direnv.status.showChangesCount": false,

  "errorLens.delay": 750,

  "python.terminal.activateEnvironment": false,
  "interactiveWindow.collapseCellInputCode": "never",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "notebook.output.scrolling": true,

  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd"
}
