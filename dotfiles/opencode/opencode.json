{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "keybinds": {
    "app_exit": "<leader>q",
    "input_delete": "ctrl+alt+d,delete,shift+delete",
    "input_delete_to_line_start": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+d",
    "messages_half_page_up": "ctrl+u"
  },
  "permission": {
    "external_directory": {
      "~/.aws/**": "deny",
      "~/.gnupg/**": "deny",
      "~/.kube/**": "deny",
      "~/.ssh/**": "deny",
      "~/Documents/**": "deny"
    },
    "read": {
      "*": "allow",
      "**/secrets/**": "deny",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.envrc": "deny",
      "*id_rsa": "deny",
      "*id_ed25519": "deny",
      "*.key": "deny",
      "*.pem": "deny",
      "*.tfvars": "deny"
    }
  },
  "share": "disabled",
  "theme": "system"
}
